	<!-- Hibernate 3 Annotation SessionFactory Bean definition-->
    <bean id="hibernate4AnnotatedSessionFactory"
        class="org.springframework.orm.hibernate4.LocalSessionFactoryBean">
        <property name="dataSource" ref="dataSource" />
        <property name="annotatedClasses">
            <list>
                <value>co.com.plantilla.domain.Person</value>
            </list>
        </property>
        <property name="hibernateProperties">
            <props>
                <prop key="hibernate.dialect">org.hibernate.dialect.MySQLDialect</prop>
                <prop key="hibernate.current_session_context_class">thread</prop>
                <prop key="hibernate.show_sql">false</prop>
            </props>
        </property>
    </bean>

	<!-- DAO -->
    <bean id="personDAO" class="co.com.plantilla.dao.impl.PersonDAOImpl">
        <property name="sessionFactory" ref="hibernate4AnnotatedSessionFactory" />
    </bean>
	
	<!-- Controllers -->
    <bean id="baseController" scope="session" class="co.com.plantilla.controller.BaseController">
    	<property name="baseService" ref="baseService" />
    	<property name="personDAO" ref="personDAO" />
    </bean>

	<!-- Services -->
    <bean id="baseService" class="co.com.plantilla.services.impl.BaseServiceImpl">
    	<property name="baseDAO" ref="baseDAO" />
    </bean>

	<!-- DAOs -->
    <bean id="baseDAO" class="co.com.plantilla.dao.impl.BaseDAO">
    <!-- data source -->
    </bean>

